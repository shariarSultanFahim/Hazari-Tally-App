{
  "expo": {
    "name": "Hazari Tally",
    "slug": "hazari-tally-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon/icon.jpeg",
    "scheme": "hazaritallyapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon/icon.jpeg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.lungiman.hazaritallyapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/icon/icon.jpeg"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icon/icon.jpeg",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "82832f11-8f10-4f59-b5c4-19be9f0f58e1"
      }
    },
    "doctor": {
      "reactNativeDirectoryCheck": {
        "listUnknownPackages": false
      }
    }
  }
}
